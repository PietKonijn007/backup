# Flask Configuration
FLASK_ENV=development
API_SECRET_KEY=change-this-to-a-random-secret-key

# Google OAuth Credentials
# Get these from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret-here
GOOGLE_REFRESH_TOKEN=your-refresh-token-here

# AWS Credentials (or use IAM role on EC2)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Backblaze B2 Credentials
# Get these from Backblaze B2 console: https://secure.backblaze.com/b2_buckets.htm
B2_APPLICATION_KEY_ID=your-b2-key-id
B2_APPLICATION_KEY=your-b2-application-key

# EU Provider Credentials (Scaleway)
EU_PROVIDER_ACCESS_KEY=your-scaleway-access-key
EU_PROVIDER_SECRET_KEY=your-scaleway-secret-key

# Database
DATABASE_URL=sqlite:///sync_state.db

# Admin User (for initial login)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password
